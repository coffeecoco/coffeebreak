# CORE
group = core
admin-port = <%= kannel_admin_port %>
smsbox-port = <%= kannel_smsbox_port %>
box-allow-ip = "*.*.*.*"
box-deny-ip = "1.1.1.1"
admin-password = foobar
log-file = "/var/var/log/bearerbox_server.log"
log-level = 3
access-log-format = "%l [SMSC:%i] [SVC:%n] [ACT:%A] [BINF:%B] [from:%p] [to:%P] [flags:%m:%c:%M:%C:%d] [msg:%L **REDACTED**] [udh:%U:%u]"
access-log = "/var/log/bearerbox_access.log"
#store-type = spool
#store-location = "/var/var/bearerbox_server"
smsbox-max-pending = 100
dlr-storage = <%= dlr_storage %>

# http smsc config - pushes messages coming from smpp to http (message hub) and also receives back DLRs and messages from message hub via Http in
group = smsc
smsc = http
smsc-id = "forwarder_01"
system-type = generic
smsc-username = callbackuser
smsc-password = nottelling
port = 4444
connect-allow-ip = "*.*.*.*"
send-url = "http://null"
status-success-regex = "ccepted"
#status-success-regex = "OK"
transceiver-mode = true

# SMSC SMPP
group = smsc
smsc = smpp
host = <%= smsc_host %>
port = <%= smsc_port %>
smsc-username = <%= smsc_username  %>
smsc-password = <%= smsc_password  %>


# unused but required by bearerbox as at least one of wapbox or smsbox needs to run
group = smsbox
bearerbox-host = 127.0.0.1
sendsms-port = <%= smsbox_port %>
#global-sender = <%= smsbox_port %>
log-file = "/var/log/smsbox_server.log"
log-level = 5
access-log = "/var/log/smsbox_access.log"


group = redis-connection
id = redisdlr          
host = <%= redis_host %>
port = <%= redis_port %>
#password = foo   
database = 0
max-connections = 1

group = dlr-db               
id = redisdlr
table = dlr
field-smsc = smsc
field-timestamp = ts
field-destination = destination
field-source = source      
field-service = service
field-url = url   
field-mask = mask
field-status = status
field-boxc-id = boxc
